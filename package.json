{
  "name": "joinhandshake-headless",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "yarn": "1",
    "node": ">=18 <19"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "storybook:watch": "yarn workspace @joinhandshake/storybook storybook",
    "storybook:build": "yarn workspace @joinhandshake/storybook build-storybook",
    "ui-components:watch": "yarn workspace @joinhandshake/ui-components watch",
    "ui-components:build": "yarn workspace @joinhandshake/ui-components build",
    "components:dev": "concurrently --kill-others --names 'storybook,components' --prefix-colors 'green,blue' 'yarn storybook:watch' 'yarn ui-components:watch'",
    "web:dev": "yarn workspace @joinhandshake/joinhandshake-web dev",
    "sanity:dev": "yarn workspace @joinhandshake/sanity-studio start",
    "sanity:build": "yarn workspace @joinhandshake/sanity-studio build",
    "types": "./scripts/type-check.sh",
    "lint": "./scripts/lint-check.sh",
    "lint:fix": "./scripts/lint-fix.sh",
    "format": "./scripts/format-check.sh",
    "format:fix": "./scripts/format-fix.sh",
    "styles": "./scripts/styles-check.sh",
    "styles:fix": "./scripts/styles-fix.sh"
  },
  "devDependencies": {},
  "dependencies": {
    "concurrently": "^7.6.0",
    "tailwindcss": "^3.2.4"
  }
}
